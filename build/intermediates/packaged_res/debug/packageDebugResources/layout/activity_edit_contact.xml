<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EditContact">
    <TextView
        android:id="@+id/editContactHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alata"
        android:text="Edit Contact"
        android:textColor="@color/orange"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/buttonUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editContactHeading"
        android:layout_marginEnd="6dp"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/updateTextName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the name"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/editContactHeading"
        android:background="@drawable/orange_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:fontFamily="@font/alata"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/updateTextTel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the tel"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@+id/updateTextName"
        android:background="@drawable/orange_border"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:inputType="phone"
        android:fontFamily="@font/alata"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/updateTextNickname"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/updateTextName"
        android:layout_marginTop="100dp"
        android:background="@drawable/orange_border"
        android:fontFamily="@font/alata"
        android:hint="Enter the tel"
        android:inputType="phone"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="20sp"
        tools:ignore="MissingConstraints" />
</RelativeLayout>